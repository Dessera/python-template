{%- import '.jinja/project.jinja' as proj with context -%}

[project]
name = "{{ proj.package_name }}"
version = "{{ version }}"
authors = [
  { name="{{ author }}", email="{{ email }}" }
]
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ py_version }}"
dependencies = [
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[dependency-groups]
dev = [
]
